<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:text="Button"
        android:visibility="gone" />
    <ScrollView
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/scrollview_background" >


        <ImageView
            android:id="@+id/shopnamebg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/textbackground"

            />
    </ScrollView>

    <ImageButton
        android:id="@+id/coverphotobutton"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="62dp"
        android:background="@drawable/coverphoto"/>


    <ImageButton
        android:id="@+id/shoplogobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:src="@drawable/logo"

        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/shopname"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="210dp"
        android:text="Shop Name"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/shopnameedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_shop_name"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="630dp"
        android:text="@string/save"
        android:textSize="30sp"
        android:visibility="visible"
        app:backgroundTint="#F4B1BA"
        tools:visibility="visible" />


</FrameLayout>

</RelativeLayout>